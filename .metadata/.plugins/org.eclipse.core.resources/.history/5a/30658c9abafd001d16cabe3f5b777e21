package front;

public class App {

	public static void main(String[] args) {

		char op;
		
		do {
			System.out.println("-------- PETSHOP --------");
			System.out.println("[1] - Cadastrar cliente");
			op = Console.readChar("Selecione uma opção: ");
			
			switch(op) {
			case 1:
				System.out.println("Funcionou");
				break;
			default:
				System.out.println("Opção inválida!");
			}
			
			
		} while (op != 1);
		
	}

}
